<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="FirebaseUI.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/fui_auth_method_button_drawablePadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/fui_auth_method_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/fui_auth_method_button_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.BaseButton">
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="android:insetBottom">@dimen/fui_button_inset_bottom</item>
        <item name="android:insetTop">@dimen/fui_button_inset_top</item>
        <item name="android:insetLeft">@dimen/fui_button_inset_left</item>
        <item name="android:insetRight">@dimen/fui_button_inset_right</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.GoogleButton" parent="FirebaseUI.Button.AccountChooser.BaseButton">
        <item name="icon">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="backgroundTint">@color/fui_bgGoogle</item>
        <item name="android:textColor">#757575</item>
    </style>
</resources>